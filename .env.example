# 应用基础配置
DEBUG=False                      # 是否开启调试模式
APP_NAME=bug-knowledge          # 应用名称
APP_PORT=5000                   # 应用端口号(1024-65535)

# 数据库配置
DATABASE_PATH=data/bugs.db      # SQLite数据库路径

# GitLab配置（多个值用|分隔）
GITLAB_URLS=                    # GitLab服务器URL列表，例如：http://gitlab1.com|http://gitlab2.com
GITLAB_TOKENS=                  # GitLab访问令牌列表
GITLAB_PROJECT_IDS=             # GitLab项目ID列表，每组用逗号分隔，组间用|分隔，例如：1,2,3|4,5,6
DEFAULT_DAYS=30                 # 默认抓取最近多少天的数据
GITLAB_SINCE_DATE=             # 抓取数据的起始日期，格式：YYYY-MM-DD
GITLAB_UNTIL_DATE=             # 抓取数据的结束日期，格式：YYYY-MM-DD

# TD系统配置（多个值用|分隔）
TD_URLS=                       # TD系统URL列表
TD_COOKIES=                    # TD系统Cookie列表
PRODUCT_IDS=                   # 产品ID列表，每组用逗号分隔，组间用|分隔
TD_AREA=                      # TD系统区域列表

# 向量存储配置
VECTOR_STORE_DIR=data/annoy   # 向量存储目录
VECTOR_DIM=384                # 向量维度
INDEX_TYPE=angular            # 索引类型
N_TREES=10                    # 树的数量

# Web服务配置
TEMPLATES_DIR=src/ui/templates # 模板目录
STATIC_DIR=src/ui/static      # 静态文件目录
WEB_HOST=127.0.0.1           # Web服务主机地址
WEB_PORT=8010                # Web服务端口

# 日志配置
LOG_LEVEL=INFO               # 日志级别
LOG_FILE=logs/bug_knowledge.log # 日志文件路径
LOG_MAX_SIZE=10485760       # 日志文件最大大小（字节），默认10MB
LOG_BACKUP_COUNT=5          # 日志文件备份数量
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s # 日志格式

# 环境配置
PYTHON_ENV=development  # development或production

# 数据库配置
DB_PATH=./data/bugs.db

# Web服务器配置
HOST=127.0.0.1  # 开发环境使用127.0.0.1，生产环境使用0.0.0.0
PORT=8010

# 向量存储配置
VECTOR_STORE_PATH=./data/annoy

# 模型配置
MODEL_PATH=./lm-models/all-MiniLM-L6-v2

# 日志配置
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_PATH=./logs/bug_knowledge.log